# RICO Graph API Configuration
# Copy this file to .env and update with your values

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here

# API Security
# Generate a secure API key for production use
# Example: openssl rand -hex 32
API_KEY=your_api_key_here

# Optional: Test Database Configuration
# Used when running tests with docker-compose.test.yml
NEO4J_TEST_URI=bolt://localhost:7688
NEO4J_TEST_USER=neo4j
NEO4J_TEST_PASSWORD=test_password